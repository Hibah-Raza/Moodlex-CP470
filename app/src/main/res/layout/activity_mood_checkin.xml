<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_check_in"
        android:text="How are you feeling?"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_emojis"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_check_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_happy"
            android:text="😊"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_neutral"
            android:text="😐"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_sad"
            android:text="😢"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_angry"
            android:text="😡"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_mood_note"
        android:hint="Optional note..."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_emojis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_save_mood"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_mood_note"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
